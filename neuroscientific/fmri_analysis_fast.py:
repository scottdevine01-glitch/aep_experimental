    def calculate_overall_validation(self):
        """Calculate overall AEP framework validation"""
        validated_domains = 0
        total_domains = len(self.domain_results)
        
        for domain, result in self.domain_results.items():
            if result['status'] == 'VALIDATED':
                validated_domains += 1
            elif result['status'] == 'PARTIAL':
                validated_domains += 0.5
        
        overall_score = validated_domains / total_domains
        
        if overall_score >= 0.75:
            overall_status = "STRONGLY SUPPORTED"
        elif overall_score >= 0.5:
            overall_status = "PARTIALLY SUPPORTED" 
        elif overall_score >= 0.25:
            overall_status = "TENTATIVELY SUPPORTED"
        else:
            overall_status = "NOT SUPPORTED"
        
        return overall_score, overall_status
    
    def generate_comprehensive_report(self):
        """Generate comprehensive validation report"""
        print("AEP MULTI-DOMAIN VALIDATION REPORT")
        print("=" * 70)
        print("COMPREHENSIVE ASSESSMENT OF ANTI-ENTROPIC PRINCIPLE")
